{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "target": "ESNext",
        "outDir": "dist",
        "types": ["node"],
        "noImplicitAny": false,
        "strictNullChecks": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "experimentalDecorators": true,
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
