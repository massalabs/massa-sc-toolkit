{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "preserveConstEnums": true,
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "target": "es2022",
        "outDir": "dist",
        "types": ["node"],
        "noImplicitAny": false,
        "strictNullChecks": false,
        "resolveJsonModule": true,      
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "experimentalDecorators": true,
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
